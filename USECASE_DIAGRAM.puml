@startuml Climate_Tracker_UseCases
left to right direction
skinparam packageStyle rectangle
skinparam backgroundColor #FEFEFE

title Climate Tracker Application - Use Case Diagram

actor "User" as User
actor "Admin" as Admin
actor "Environmental\nActivist" as Activist

rectangle "Climate Tracker System" {
  
  package "Authentication & Profile" {
    usecase "Register Account" as UC1
    usecase "Login" as UC2
    usecase "View Profile" as UC3
    usecase "Update Profile" as UC4
    usecase "Switch Language" as UC5
  }
  
  package "Carbon Tracking" {
    usecase "Calculate Carbon\nFootprint" as UC6
    usecase "Track Daily\nActivities" as UC7
    usecase "View Carbon\nHistory" as UC8
    usecase "Get Reduction\nRecommendations" as UC9
    usecase "Set Carbon\nGoals" as UC10
  }
  
  package "Climate Monitoring" {
    usecase "View Climate\nData" as UC11
    usecase "Check Air\nQuality" as UC12
    usecase "Monitor Weather" as UC13
    usecase "View Climate\nMap" as UC14
    usecase "Get Location-Based\nAlerts" as UC15
  }
  
  package "Social Features" {
    usecase "Create\nEnvironmental Post" as UC16
    usecase "Share Activities" as UC17
    usecase "Like & Comment" as UC18
    usecase "Follow Users" as UC19
    usecase "View Social\nFeed" as UC20
  }
  
  package "CCUS (Carbon Capture)" {
    usecase "Learn About\nCCUS" as UC21
    usecase "Run CCUS\nSimulation" as UC22
    usecase "View Industry\nData" as UC23
  }
  
  package "EcoMarket" {
    usecase "Browse Eco\nProducts" as UC24
    usecase "View Product\nDetails" as UC25
    usecase "Calculate Carbon\nOffset" as UC26
    usecase "Purchase\nSustainable Items" as UC27
  }
  
  package "Advocacy" {
    usecase "View Petitions" as UC28
    usecase "Sign Petition" as UC29
    usecase "Create Campaign" as UC30
    usecase "Share Impact\nStories" as UC31
    usecase "Track Petition\nProgress" as UC32
  }
  
  package "AI Assistance" {
    usecase "Chat with\nClimate Bot" as UC33
    usecase "Get Personalized\nAdvice" as UC34
    usecase "Ask Climate\nQuestions" as UC35
  }
}

